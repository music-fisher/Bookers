<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book,local:true do |f| %>
 <div class= "field">
 <%= f.label:title,'Title' %>
 <%= f.text_field :title %>
 </div>
 <div class= "field">
 <%= f.label:body,'Body' %>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
</div>
<div class= "actions">
 <%= link_to 'Show',book_path(@book) %>
 <%= link_to 'Back',books_path %>
 </div>
<% end %>
