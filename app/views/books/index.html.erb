<h1>Books</h1>
<% @books.each do |book| %>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
  <tbody>
      <td><%= book.title %> </td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show',book_path(@book) %></td>
      <td><%= link_to 'Edit',edit_book_path %></td>
      <td><%= link_to 'Destroy',book_path(@book),method: :delete,"data-confirm" => "Are You Sure?" %></td>
  </tbody>
</table>
<% end %>

<!--投稿部分-->
<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>
